# Docker deployment: copy this file to .env (repo root) and fill in secrets.
# Dev (bare-metal): copy to apps/web/.env.local and adjust paths at the bottom.

# Twitch OAuth — register at https://dev.twitch.tv/console/apps
# Redirect URL to add in Twitch app settings:
#   http://localhost:3000/api/auth/callback/twitch  (dev)
#   https://your-domain/api/auth/callback/twitch    (prod)
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here

# NextAuth — generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Absolute paths — Docker container paths (adjust for bare-metal installs)
COMPOSITOR_BINARY=/usr/local/bin/srt_compositor
UPLOADS_DIR=/app/uploads
DATA_DIR=/app/data

# SRT listener port pool (one port per active stream)
SRT_PORT_MIN=6000
SRT_PORT_MAX=6099
